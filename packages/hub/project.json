{
  "name": "hub",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/hub/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/packages/hub",
        "main": "packages/hub/src/main.ts",
        "tsConfig": "packages/hub/tsconfig.app.json",
        "assets": [
          "packages/hub/src/assets",
          {
            "glob": "README.md",
            "input": "./",
            "output": "./"
          }
        ],
        "isolatedConfig": true,
        "webpackConfig": "packages/hub/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "hub:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "hub:build:development"
        },
        "production": {
          "buildTarget": "hub:build:production"
        }
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs hub {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/hub/jest.config.ts"
      }
    }
  },
  "tags": []
}
