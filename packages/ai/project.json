{
  "name": "ai",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ai/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/ai",
        "main": "packages/ai/src/index.ts",
        "tsConfig": "packages/ai/tsconfig.lib.json",
        "assets": [
          {
            "glob": "README.md",
            "input": "./",
            "output": "./"
          }
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs ai {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ai/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/ai/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "tf": {
      "executor": "nx:run-commands",
      "configurations": {
        "train": {
          "commands": [
            "ts-node --project packages/ai/tsconfig.test.json packages/ai/src/test/tf.test.ts"
          ]
        }
      }
    }
  },
  "tags": []
}
