{
  "name": "puschel",
  "version": "1.0.3",
  "repository": {
    "url": "https://github.com/artificialhoney/puschel.git"
  },
  "scripts": {
    "dev": " concurrently --kill-others \"npm run dev --workspace=packages/ui\" \"npm run dev --workspace=packages/hub\"",
    "lint:fix": "eslint --fix",
    "gql:compile": "graphql-codegen --config packages/ui/codegen.ts",
    "gql:watch": "graphql-codegen -w --config packages/ui/codegen.ts"
  },
  "private": true,
  "workspaces": [
    "packages/ui",
    "packages/core",
    "packages/models",
    "packages/hub"
  ],
  "devDependencies": {
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "graphql-codegen": "^0.4.0"
  }
}
